{
    "app": {
        "macOSPrivateApi": false,
        "windows": [
            {
                "title": "PastePaw",
                "width": 1920,
                "height": 540,
                "minWidth": 700,
                "minHeight": 400,
                "resizable": false,
                "fullscreen": false,
                "decorations": false,
                "transparent": false,
                "shadow": true,
                "visible": false,
                "center": false,
                "label": "main"
            }
        ]
    },
    "bundle": {
        "active": true,
        "targets": ["app"],
        "createUpdaterArtifacts": false,
        "category": "public.app-category.utilities",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon_light_green_gradient.png"
        ],
        "macOS": {
            "entitlements": "./Entitlements.plist",
            "signingIdentity": "Apple Distribution",
            "files": {
                "embedded.provisionprofile": "PastePaw.provisionprofile"
            }
        }
    },
    "plugins": {
        "updater": {
            "active": false
        }
    }
}
